# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,html,js,json}]
indent_size = 2
indent_style = tab

[*.py]
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[*.{bat,iss}]
end_of_line = crlf
