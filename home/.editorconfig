# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{bat,iss}]
end_of_line = crlf

[*.{css,html,js,json,sh}]
indent_size = 2
indent_style = tab

[*.py]
indent_size = 4
indent_style = space

[*.{md,rst,yml}]
indent_size = 2
indent_style = space

[**/{bower_components,node_modules,var}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_size = unset
indent_style = unset
